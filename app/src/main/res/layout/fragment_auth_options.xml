<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingHorizontal="20dp"
        android:id="@+id/root_layout">

        <ImageView
            android:id="@+id/cmd_logo"
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_cmd"
            app:tint="@color/brand_black" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_signup"
            android:layout_width="match_parent"
            android:layout_below="@id/cmd_logo"
            android:layout_height="wrap_content"
            android:text="@string/sign_up"
            style="@style/BrandButton"
            android:layout_marginTop="40dp"
            android:paddingVertical="2dp"
            android:textAllCaps="false"
            android:textColor="@color/text_white"
            android:fontFamily="@font/poppins_medium"
            android:textSize="16sp"
            android:background="@drawable/background_auth_button"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_signin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/sign_in"
            android:layout_below="@id/button_signup"
            style="@style/CustomButton"
            android:paddingVertical="2dp"
            android:textAllCaps="false"
            android:layout_marginTop="20dp"
            android:textColor="@color/text_white"
            android:fontFamily="@font/poppins_medium"
            android:textSize="16sp"
            android:background="@drawable/background_auth_button"/>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>