<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="15dp"
    android:background="@color/light_white">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_back_ios"
        app:tint="@color/brand_black"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/button_back"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        android:contentDescription="@string/app_name"/>

    <LinearLayout
        android:id="@+id/first_section"
        app:layout_constraintTop_toTopOf="@id/button_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        android:layout_marginBottom="40dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image_cmd"
            android:layout_width="101dp"
            android:layout_height="30dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_cmd"
            android:transitionName="image_cmd"
            app:tint="@color/brand_black" />

    </LinearLayout>

    <androidx.viewpager2.widget.ViewPager2
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/indicators"
        app:layout_constraintTop_toBottomOf="@id/first_section"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        android:alpha="0"
        android:layout_marginBottom="20dp"
        android:id="@+id/view_pager"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@id/button_skip"
        android:id="@+id/indicators"
        android:alpha="0"
        app:layout_constraintTop_toBottomOf="@id/view_pager"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="20dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/first_indicator"
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:layout_marginHorizontal="5dp"
            android:contentDescription="@string/app_name"
            android:background="@drawable/background_on_boarding_indicator_active"/>

        <ImageView
            android:id="@+id/second_indicator"
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:contentDescription="@string/app_name"
            android:layout_marginHorizontal="5dp"
            android:background="@drawable/background_on_boarding_indicator_inactive"/>

        <ImageView
            android:id="@+id/third_indicator"
            android:contentDescription="@string/app_name"
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:layout_marginHorizontal="5dp"
            android:background="@drawable/background_on_boarding_indicator_inactive"/>

    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_skip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/indicators"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="20dp"
        android:text="@string/skip"
        style="@style/CustomButton"
        android:paddingVertical="3dp"
        android:textAllCaps="false"
        android:textColor="@color/brand_black"
        android:fontFamily="@font/poppins_medium"
        android:textSize="16sp"
        android:background="@drawable/background_button_skip"/>

    <Button
        android:id="@+id/button_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/button_skip"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/button_skip"
        android:text="Next"
        style="@style/CustomButton"
        android:paddingVertical="5dp"
        android:textAllCaps="false"
        android:textColor="@color/text_white"
        android:fontFamily="@font/poppins_medium"
        android:background="@drawable/background_next_button"
        android:textSize="16sp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_get_started"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/indicators"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="1dp"
        android:text="Get Started"
        style="@style/BrandButton"
        android:paddingVertical="2dp"
        android:visibility="gone"
        android:textAllCaps="false"
        android:textColor="@color/text_white"
        android:fontFamily="@font/poppins_medium"
        android:textSize="16sp"
        android:background="@drawable/background_auth_button"/>


</androidx.constraintlayout.widget.ConstraintLayout>