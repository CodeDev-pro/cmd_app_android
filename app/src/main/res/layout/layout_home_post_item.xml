<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingHorizontal="15dp"
        android:paddingTop="10dp"
        android:id="@+id/top_section"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.makeramen.roundedimageview.RoundedImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@color/brand_yellow"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/post_item_user_image"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Caller Howard â€¢ "
            android:layout_marginStart="8dp"
            android:textSize="19sp"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="@color/brand_black"
            app:layout_constraintStart_toEndOf="@id/post_item_user_image"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/post_item_username"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2h"
            android:textSize="16sp"
            android:fontFamily="@font/poppins_medium"
            android:layout_marginStart="8dp"
            android:textColor="@color/gray_600"
            app:layout_constraintTop_toBottomOf="@id/post_item_username"
            app:layout_constraintStart_toEndOf="@id/post_item_user_image"
            android:id="@+id/post_item_timestamp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Follow"
            android:textSize="18sp"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/brand_yellow"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/post_item_username"
            android:id="@+id/post_item_follow"
            android:focusable="true" />

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/ic_more_vert"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/brand_black"
            android:contentDescription="@string/app_name"
            android:id="@+id/more_vertical_icon"
            android:focusable="true"
            android:clickable="true"
            android:background="?attr/selectableItemBackgroundBorderless"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/post_item_timestamp"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textColor="@color/brand_black"
            android:fontFamily="@font/poppins_medium"
            android:textSize="17sp"
            android:text="@string/dummy"
            android:maxLines="3"
            android:ellipsize="end"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:src="@drawable/ic_google"
        app:layout_constraintTop_toBottomOf="@id/top_section"
        android:layout_marginTop="15dp"
        android:background="@color/brand_yellow"
        android:id="@+id/post_item_image"
        android:contentDescription="@string/app_name"
        android:scaleType="centerCrop"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/post_item_image"
        android:id="@+id/last_section"
        android:paddingHorizontal="20dp"
        android:paddingVertical="20dp">

        <View
            android:layout_width="1dp"
            android:layout_height="1dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/button_share"
            android:background="@android:color/transparent"
            app:layout_constraintEnd_toStartOf="@id/button_save"
            android:id="@+id/guide"/>

       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toTopOf="parent"
           app:layout_constraintBottom_toBottomOf="parent"
           app:layout_constraintEnd_toStartOf="@id/comment_section"
           android:id="@+id/favourite_section"
           android:orientation="horizontal">

           <ImageView
               android:layout_width="30dp"
               android:layout_height="30dp"
               android:src="@drawable/ic_fav_border"
               app:tint="@color/brand_black"
               android:contentDescription="@string/app_name"
               android:id="@+id/button_favorite"
               android:layout_gravity="center"
               android:focusable="true"
               android:clickable="true"
               android:background="?attr/selectableItemBackgroundBorderless"/>

           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:textColor="@color/brand_black"
               android:layout_gravity="center"
               android:fontFamily="@font/poppins_medium"
               android:textSize="20sp"
               android:layout_marginStart="5dp"
               android:text="5"
               android:maxLines="3"
               android:ellipsize="end"/>

       </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/favourite_section"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/button_share"
            android:id="@+id/comment_section"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_chat_outlined"
                app:tint="@color/brand_black"
                android:contentDescription="@string/app_name"
                android:id="@+id/button_comment"
                android:layout_gravity="center"
                android:focusable="true"
                android:clickable="true"
                android:background="?attr/selectableItemBackgroundBorderless"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/brand_black"
                android:layout_gravity="center"
                android:fontFamily="@font/poppins_medium"
                android:textSize="20sp"
                android:layout_marginStart="5dp"
                android:text="5"
                android:maxLines="3"
                android:ellipsize="end"/>

        </LinearLayout>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_share"
            app:tint="@color/brand_black"
            app:layout_constraintEnd_toEndOf="@id/guide"
            app:layout_constraintStart_toEndOf="@id/comment_section"
            app:layout_constraintTop_toTopOf="parent"
            android:contentDescription="@string/app_name"
            android:id="@+id/button_share"
            android:layout_gravity="center"
            android:focusable="true"
            android:clickable="true"
            android:background="?attr/selectableItemBackgroundBorderless"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_bookmark_outlined"
            app:tint="@color/brand_black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:contentDescription="@string/app_name"
            android:id="@+id/button_save"
            android:focusable="true"
            android:clickable="true"
            android:background="?attr/selectableItemBackgroundBorderless"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_400"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/last_section"/>

</androidx.constraintlayout.widget.ConstraintLayout>